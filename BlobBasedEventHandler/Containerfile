FROM python:3.12-slim

# Ensure runtime is non-interactive and output is unbuffered
ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# Install system deps (only if needed)
RUN apt-get update && apt-get install -y --no-install-recommends \
        ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency specification first for caching
COPY requirements.txt ./
RUN pip install -r requirements.txt

# Copy source last to leverage Docker cache
COPY . .

# Create non-root user and switch
RUN adduser --disabled-password --gecos "" appuser && chown -R appuser /app
USER appuser

ENTRYPOINT ["python", "-m", "blob_event_handler"] 